{
    "name": "rpungello/weighted-table",
    "description": "Weighted HTML tables for PHP",
    "keywords": [
        "rpungello",
        "weighted-table"
    ],
    "homepage": "https://github.com/rpungello/weighted-table",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob.pungello@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "anahkiasen/html-object": "^1.4"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Rpungello\\WeightedTable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rpungello\\WeightedTable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
